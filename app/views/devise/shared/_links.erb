<%- if controller_name != 'sessions' %>
    <label class="label_80"></label>
    <span>
        <%= link_to "Sign in", new_session_path(resource_name), class: "form_button_full_orange"%>
    </span></br>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <label class="label_80"></label>
    <span>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "form_button_full_orange"%>
    </span></br>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <label class="label_80"></label>
    <span>
        <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "form_button_full_orange"%>
    </span></br>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <label class="label_80"></label>
    <span>
        <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "form_button_full_orange"%>
    </span></br>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>    
    <label class="label_80"></label>
    <span>
        <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "form_button_full_orange"%>
    </span></br>
  <% end -%>
<% end -%>

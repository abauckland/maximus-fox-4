<div class="row title_band">
    <div class="page_title">
        <h1>Resend unlock instructions</h1>
    </div>      
    <div><%= link_to "Sign in", new_session_path(resource_name), class: "title_button"%></div>
</div>


<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- form column start-->
            <div class="row">
                <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
                    <fieldset>

                        <!-- form input[text] --> 
                        <label class="label_120">Email:*</label>
                        <span>
                            <%= f.email_field :email, autofocus: true %>
                        </span></br>

                        
                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "request unlock instructions"%>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>
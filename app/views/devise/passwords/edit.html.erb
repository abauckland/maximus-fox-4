<div class="row title_band">
    <div class="page_title">
        <h1>Change your password</h1>            
    </div>    
    <div><%= link_to "Sign in", new_session_path(resource_name), class: "title_button"%></div>
</div>


<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => resource} %>

<!-- form column start-->
            <div class="row">
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                    <%= f.hidden_field :reset_password_token %>
                    <fieldset>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="company_retail_subdomain"></div>
                        <label class="label_100">New password:*</label>
                        <span>
                            <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
                        </span></br>

                        <!-- form input[textarea] -->    
                        <div class="form_tooltip"></div>
                        <label class="label_100">Confirm new password:*</label>
                        <span>
                            <%= f.password_field :password_confirmation, autocomplete: "off" %>
                        </span></br>
                        
                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>
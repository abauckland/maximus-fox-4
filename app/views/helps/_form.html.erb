<script src="//tinymce.cachefly.net/4.1/tinymce.min.js"></script>
<script>tinymce.init({
    selector:'textarea',
    menubar : false,
    statusbar : false,
    height : 300,
    toolbar: ["fontselect fontsizeselect","bold italic underline bullist numlist"]
});</script>


<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @help} %>

<!-- form column start-->
            <div class="row">
                <%= form_for @help do |f| %>
                    <%= f.hidden_field :company_id, :value => current_user.company_id %>
                    <fieldset>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="company_retail_subdomain"></div>
                        <label class="label_120">Item class name:*</label>
                        <span>
                            <%= f.text_field :item %>
                        </span></br>

                        <!-- form input[textarea] -->    
                        <div class="form_tooltip"></div>
                        <label class="label_80">Help Text:*</label>
                        <span>
                            <%= f.text_area :text, class: "widgEditor" %>
                        </span></br>
                        
                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel", main_app.helps_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>
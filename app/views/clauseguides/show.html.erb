<div class="row title_band">
    <div class="page_title">
        <h1>Clause Guidance Note</h1>
    </div>
</div>

<% if associated_clauses(@clauseguide) %>
    <div class="row info_band">
        <div class="info_right">
            <div><h3>This guidance note is associated with more than one clause</h3></div>
        </div>
    </div>
<% end %>


<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- form column start-->
            <div class="row">

                        <!-- form input[textarea] -->
                <div class="row">
                    <div class="column_text">
                        <%= @clauseguide.guidenote.text %>
                    </div>
                </div>

            </div>

<!-- column footer start-->
            <div class="row">
                <div class="form_footer">
                    <%= link_to "cancel", clauseguides_path(:subsection_id => @subsection_id) %>
                </div>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>
<div class="row title_band">
    <div class="page_title">
        <h1>Clone Guide</h1>
    </div>
</div>

<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start-->
        <%= render :partial => "form_error", :locals => {item: @clauseguide} %>

<!-- form column start-->
            <div class="row">
                <%= form_tag(:controller => "clauseguides", :action => "create_clone") do %>
                
					<%= hidden_field_tag "clause_id", @clause_id %>
					<%= hidden_field_tag "plan_id", @plan_id %>
                    <fieldset>

                    <!-- form input[select] -->
                    <label class="label_110"></label>
                    <label class="label_50">Section:</label>
                    <span class="clone_section">
                    <% if @project.CAWS? %>
                      <%= select_tag "clone_guide_section_id", options_from_collection_for_select(@clone_subsections, :id, :full_code_and_title), {:prompt => 'Select Section'} %>
                    <% else %>
                      
                    <% end %>
                    </span></br>

                    <!-- form input[select] -->
                    <label class="label_110"></label>
                    <label class="label_50">Clause:</label>
                    <span class="clone_clause">
                      <%= select_tag "clone_guide_clause_id", nil, {prompt: 'Select Clause', disabled: true} %>
                    </span></br>

                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= submit_tag "add guidance note"%>
                    <%= link_to "cancel", clauseguides_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>

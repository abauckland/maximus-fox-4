<div class="row title_band">
    <div class="page_title">
        <h1>Create Account</h1>
    </div>
    <div class="title_help" id="company_new"></div>
</div>


<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start-->
            <%= render :partial => "form_error", :locals => {:item => @company} %>


<!-- form column start-->
            <div class="row">
				<%= form_for @company do |f| %>
				    <%= f.hidden_field(:no_licence, {:value => '5'})%>
				    <%= f.hidden_field(:category, {:value => :designer})%>
				    
                    <fieldset>					
					<%= f.fields_for :users do |builder| %>
						<div class="form_check"><%= f.text_field :check_field%></div>
						<%= builder.hidden_field(:role, {:value => 'admin'})%>
						<%= builder.hidden_field(:active, {:value => true})%>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="user_first_name"></div>
                        <label class="label_100">First Name:*</label>
                        <span>
                            <%= builder.text_field :first_name %>
                        </span></br>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="user_surname"></div>
                        <label class="label_100">Surname:*</label>
                        <span>
                            <%= builder.text_field :surname %>
                        </span></br>

                        <!-- form input[email] --> 
                        <div class="form_tooltip" id="user_email"></div>
                        <label class="label_100">Email Address:*</label>
                        <span>
                            <%= builder.email_field :email %>
                        </span></br>

                        <!-- form input[password] --> 
                        <div class="form_tooltip" id="user_password"></div>
                        <label class="label_100">Password:*</label>
                        <span>
                            <%= builder.password_field :password %>
                        </span></br>

                        <!-- form input[password] --> 
                        <div class="form_tooltip" id="user_confirm_password"></div>
                        <label class="label_100">Confirm Password:*</label>
                        <span>
                            <%= builder.password_field :password_confirmation %>
                        </span></br>

				    <% end %>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="company_name"></div>
                        <label class="label_100">Company Name:*</label>
                        <span>
                            <%= f.text_field :name %>
                        </span></br>

                        <!-- form input[checkbox] --> 
                        <div class="form_tooltip" id="company_terms"></div>
                        <label class="label_100">Accept T&Cs:*</label>
                        <span>
                            <%= f.check_box :read_term %>
                        </span></br>

                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "create free account"%>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>


  



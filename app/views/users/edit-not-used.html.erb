<div class="row title_band">
    <div class="page_title">
        <h1>Edit User Details</h1>
    </div>
</div>


<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start-->
            <%= render :partial => "form_error", :locals => {:item => @user} %>

<!-- form column start-->
            <div class="row">
				<%= form_for @user do |f| %>
                    <fieldset>
					
						<div class="row">
							<div class="column_text">
								<p>Please note: you will be automatically logged out when you save changes made.</p>
							</div>
						</div>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="user_first_name"></div>
                        <label class="label_100">First Name:*</label>
                        <span>
                            <%= f.text_field :first_name %>
                        </span></br>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="user_surname"></div>
                        <label class="label_100">Surname:*</label>
                        <span>
                            <%= f.text_field :surname %>
                        </span></br>

                        <!-- form input[email] --> 
                        <div class="form_tooltip" id="user_surname"></div>
                        <label class="label_100">Email Address:*</label>
                        <span>
                            <%= f.email_field :email %>
                        </span></br>

                        <!-- form input[password] --> 
                        <div class="form_tooltip" id="user_password"></div>
                        <label class="label_100">Password:*</label>
                        <span>
                            <%= f.password_field :password %>
                        </span></br>

                        <!-- form input[password] --> 
                        <div class="form_tooltip" id="user_new_password"></div>
                        <label class="label_100">New Password:*</label>
                        <span>
                            <%= password_field_tag :new_password %>
                        </span></br>

                        <!-- form input[password] --> 
                        <div class="form_tooltip" id="user_confirm_password"></div>
                        <label class="label_100">Confirm New Password:*</label>
                        <span>
                            <%= password_field_tag :new_password_confirmation %>
                        </span></br>

                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "update"%>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>
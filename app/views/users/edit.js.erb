$('#<%=@user%>').children('#active_button').toggle();
$('#<%=@user%>').children('#deactive_button').toggle();

$('#unlock-<%=@user%>').children('#unlock_button').hide();

if (<%= @available_licences %> == 0)
{$('#information').css('color', '#ff0000').html("All the company's licences (<%= @user.company.no_licence %>) are currently in use");;}
else
{$('#information').css('color', '#000').html("<%= @active_licences.count %> licence(s) are currently active out of an available <%= @user.company.no_licence %> licence(s).");;}


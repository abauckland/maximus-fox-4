<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @projectuser} %>

<!-- form column start-->
            <div class="row">

            <%= form_for @projectuser do |f| %>

                <%= f.hidden_field :company_id, :value => @project.company_id %>
                <%= f.hidden_field :project_id, :value => @project.id %>
                <%= f.hidden_field :manager_id, :value => current_user.id%>
                <%= f.hidden_field :role, :value => 'edit'%>

                <fieldset>

                    <div class="row">
                        <div class="column_title">
                            <h4>Project User Details</h4>
                        </div>
                    </div>

                    <!-- form input[text] -->
                    <div class="form_tooltip" id="projectuser_email"></div>
                    <label class="label_120">User email:*</label>
                     <span><%= f.text_field :email %></span></br>

                    <!-- form input[text] -->
                    <div class="form_tooltip" id="projectuser_date_from"></div>
                    <label class="label_120">Date From:*</label>
                    <span><%= f.date_field :date_from, {placeholder: 'dd/mm/yyyy'} %></span></br>

                    <!-- form input[text] -->
                    <div class="form_tooltip" id="projectuser_date_to"></div>
                    <label class="label_120">Date To:*</label>
                    <span><%= f.date_field :date_to, {placeholder: 'dd/mm/yyyy'} %></span></br>

                </fieldset>
            </div>
			<!-- column footer start-->
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel", projects_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>
  
<div class="page_title"><%= @project.code_and_title %></div><div class="content">    <% if @not_used == true %>    <div class="column_1">        <div class="column_content">                   <div class="column_title">Add content</div>                               <div class="column_sub_content">                <div class="column_guide">                    <p>This project does not have any content. Please click on the 'add sections' link below to start creating your specificaton by add relevant sections.                 </div>                              </div>                    <div class="column_footer">                <div>                    <div class="column_submit"><%= link_to "add sections", {:controller => "specsubsections", :action => "manage"}%> </div>                </div>               </div>                  </div>       </div>	<% else %>            <% if @project_user.manage? || @project_user.edit? %>    <div class="column_1">		<div class="column_content">       			<div class="column_title">Add content</div>       			    		<div class="column_sub_content">				<div class="column_guide">					<p>This project does not have any content. Please click on the 'add sections' link below to start creating your specificaton by add relevant sections.       			</div>      			    		</div>    	      		<div class="column_footer">        		<div>        			<div class="column_submit"><%= link_to "add sections", {:controller => "specsubsections", :action => "manage"}%> </div>        		</div>         		</div>    		      	</div>   	</div>	<% else %>    <div class="column_1">        <div class="column_content">                   <div class="column_title">Empty Specification</div>                               <div class="column_sub_content">                <div class="column_guide">                    <p>The specification for this project has not been started.</p>                </div>                                  <div class="column_guide">                    <p>You do not have the necessary privilages to create content for this specification, please refer to the 'manager' for the project.</p>                </div>              </div>                 </div>       </div>		<% end %>	<div class="column_2 column_blank"></div>     <div class="column_3 column_blank"></div>    <% end %> </div>      			
<h1>Listing revisions</h1>

<table>
  <thead>
    <tr>
      <th>Rev</th>
      <th>Project status</th>
      <th>Project</th>
      <th>User</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @revisions.each do |revision| %>
      <tr>
        <td><%= revision.rev %></td>
        <td><%= revision.project_status %></td>
        <td><%= revision.project_id %></td>
        <td><%= revision.user_id %></td>
        <td><%= revision.date %></td>
        <td><%= link_to 'Show', revision %></td>
        <td><%= link_to 'Edit', edit_revision_path(revision) %></td>
        <td><%= link_to 'Destroy', revision, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Revision', new_revision_path %>


<!-- desktop menu -->              
<div class="lrg_menu">                    
    <div class='menu_container'>                                                                    
        <ul class="left_menu">                            
            <% if request.path_parameters[:action] == "new" %>                        
                <li class="has_sub"><%= link_to "PROJECTS", projects_path, :class => check_current('project') %> 
                    <ul>
                        <li><%= link_to "Select Project", projects_path %> </li>
                    </ul>                              
                </li>
            <% else %>
                <li class="has_sub"><%= link_to "PROJECTS", projects_path, :class => check_current('project') %> 
                    <ul>
                        <li><%= link_to "Select Project", projects_path %> </li>
                        <li><%= link_to "Create Project", new_project_path %> </li>
                        <li><%= link_to "Edit Project Details", edit_project_path(@project.id) %> </li>                                        
                    </ul>                              
                </li>

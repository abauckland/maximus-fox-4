                <li><%= link_to "REVISIONS", specrevision_path(@project.id), :class => check_current('revision') %></li>
                <li class="has_sub"><%= link_to "PUBLISH", print_path(@project.id), :class => check_current('revision') %> 
                    <ul>
                        <li><%= link_to "Create/Download PDF", print_path(@project.id) %> </li>
                    </ul>                              
                </li>                      
            <% end %>
        </ul>                       
    </div>                      
</div>


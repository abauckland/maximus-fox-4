<div class="row title_band">    <div class="page_title">        <h1>Project Details</h1>    </div></div><div class="option_band_single">		<div class="project_select">		<div class="project_label_select">Project:</div>		<div class="small_hide project_option_select">      		<%= select_tag "project", options_from_collection_for_select(@projects, :id, :code_and_title, @project.id), {:class => 'project_selectBox', :onchange => "window.location='/projects/'+this.value+'/edit';"} %> 				</div>		<div class="small_show project_option_select">      		<%= select_tag "project", options_from_collection_for_select(@projects, :id, :code, @project.id), {:class => 'project_selectBox', :onchange => "window.location='/projects/'+this.value+'/edit';"} %> 				</div>	</div>	<div class="small_hide project_create_button"><%= link_to "create new project", new_project_path %> </div>	<div class="small_show project_create_button"><%= link_to "+ project", new_project_path %> </div>   </div><div class="row">    <div class="col-1-1">        <div class="border">                <div class="row">                <div class="sub-1-3 column_1">                    <fieldset>                        <div class="row">                            <div class="column_title">                                <h3>Project Details<span class="form_tooltip"></span></h3>                            </div>                        </div>                        <!-- show text line -->                        <div class="form_tooltip" id="project_status"></div>                        <label class="label_110">Project Code:</label>                        <span><%= @project.code %></span></br>                        <!-- show text line -->                        <div class="form_tooltip" id="project_status"></div>                        <label class="label_110">Project Title:</label>                        <span><%= @project.title %></span></br>                        <!-- show image -->                         <div class="form_tooltip" id="project_image"></div>                        <label class="label_120">Project Image:</label>                        <% if @project.project_image? %>                            <span>                                <%= image_tag(@project.project_image, {:height => "25px"}) %>                            </span></br>                        <% end %>                        <!-- show text line -->                        <div class="form_tooltip" id="project_status"></div>                        <label class="label_110">Project Client:</label>                        <span><%= @project.client_name %></span></br>                        <!-- show image -->                         <div class="form_tooltip" id="project_client_logo"></div>                        <label class="label_120">Client Logo:</label>                        <% if @project.client_logo? %>                            <span>                                <%= image_tag(@project.client_logo, {:height => "25px"}) %>                            </span></br>                        <% end %>                    </fieldset>                </div>                                <div class="sub-1-3 column_2">                    <fieldset>                        <div class="row">                            <div class="column_title">                                <h3>Project Settings<span class="form_tooltip"></span></h3>                            </div>                        </div>                        <!-- show text line -->                        <div class="form_tooltip" id="project_status"></div>                        <label class="label_110">Project Status:</label>                        <span>Draft</span></br>                        <div class="form_tooltip" id="project_ref_system"></div>                        <label class="label_110">Reference System:</label>                        <span>CAWS</span></br>                        <!-- show text line -->                        <div class="form_tooltip" id="project_template"></div>                        <label class="label_110">Project Template:</label>                        <span>Specright Standard Template</span></br>		      			                    </fieldset>                                                        </div>                                <div class="sub-1-3 column_3">                	                </div>            </div>                        <div class="row">                <div class="form_footer">                    <%= link_to "cancel", projects_path %>                </div>                <% end %>            </div>                    </div>    </div></div>
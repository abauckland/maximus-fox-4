<div class="project_info">	<div class="project_title">		Select project to edit/view:	</div></div><div class="option_band_single">		<div class="project_select">		<div class="project_label_select">Project:</div>		<div class="small_hide project_option_select">      		<%= select_tag "project", options_from_collection_for_select(@projects, :id, :project_code_and_title, @project.id), {:class => 'project_selectBox', :onchange => "window.location='/projects/'+this.value;"} %> 				</div>		<div class="small_show project_option_select">      		<%= select_tag "project", options_from_collection_for_select(@projects, :id, :project_code, @project.id), {:class => 'project_selectBox', :onchange => "window.location='/projects/'+this.value;"} %> 				</div>	</div>	<% if authorise_project_view(@project.id, ["manage", "edit"]) %>	   <div class="small_hide project_create_button"><%= link_to "create new project", new_project_path %> </div>	   <div class="small_show project_create_button"><%= link_to "+ project", new_project_path %> </div>       <% end %> </div><div class="content">    <div class="column_1">		<div class="column_content">      		<div class="column_title">Project details</div>       		<div class="column_sub_content">				<div class="column_guide"> 					<p>The uploaded project image will be scaled proportionally to maximum 90mm high x 120mm wide</p>  			      			</div>				<div class="column_form">						<table>						<tr><td>							<div class="project_form_label form_input_label">Project Code:*</div>							<div class="form_input"><%= @project.code %></div>												</td></tr>						<tr><td>							<div class="project_form_label form_input_label">Project Title:*</div>							<div class="form_input"><%= @project.title %></div>										</td></tr>						<tr><td>                            <div class="project_form_label form_input_label">Project Status:</div>                            <div class="form_input"><%= @project.project_status %></div>                                        </td></tr>                        <tr><td>                            <div class="project_form_label form_input_label">Reference System:</div>                            <div class="form_default"><%= @project.ref_system) %></div>                                     </td></tr>																		<tr><td>							<div class="project_form_label form_input_label">Project Image:</div>							<div class="form_input"><%= show_image(@project, 120)%></div>											</td></tr>						</table>	      	      			</div>    		</div>      	</div>   	</div>		<div class="column_2 column_blank"></div>			    <div class="column_3 column_blank"></div>      	</div> 
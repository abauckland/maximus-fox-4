<div class="row title_band">    <div class="page_title">        <h1>Project Details</h1>    </div></div><!-- project option bar --><div class="row option_band">	 <div class="option_right">		<div><%= link_to "+ project", new_project_path %>roject.parent_id) %></div>	</div>		<div class="option_left">		<div>			<label class="select_1">Project:</label>			<%= select_tag "project", options_from_collection_for_select(@projects, :id, :code_and_title), {:prompt => "Select project to view/edit", :class => 'project_selectBox', :onchange => "window.location='/projects/'+this.value+'/edit';"} %>		</div>	</div></div><div class="row">    <div class="col-1-1">        <div class="border">                <div class="row">                <div class="sub-1-3 column_1">                    <fieldset>                        <div class="row">                            <div class="column_title">                                <h4>Project Details</h4>                            </div>                        </div>                        <!-- show text line -->                        <label class="label_110">Project Code:</label>                        <span><%= @project.code %></span></br>                        <!-- show text line -->                        <label class="label_110">Project Title:</label>                        <span><%= @project.title %></span></br>                        <!-- show image -->                         <label class="label_120">Project Image:</label>                        <% if @project.project_image? %>                            <span>                                <%= image_tag(@project.project_image, {:height => "25px"}) %>                            </span></br>                        <% end %>                        <!-- show text line -->                        <label class="label_110">Project Client:</label>                        <span><%= @project.client_name %></span></br>                        <!-- show image -->                         <label class="label_120">Client Logo:</label>                        <% if @project.client_logo? %>                            <span>                                <%= image_tag(@project.client_logo, {:height => "25px"}) %>                            </span></br>                        <% end %>                    </fieldset>                </div>                                <div class="sub-1-3 column_2">                    <fieldset>                        <div class="row">                            <div class="column_title">                                <h4>Project Settings</h4>                            </div>                        </div>                        <!-- show text line -->                        <label class="label_110">Project Status:</label>                        <span>Draft</span></br>                        <!-- show text line -->                        <label class="label_110">Project Template:</label>                        <span>Specright Standard Template</span></br>                    </fieldset>                </div>                                <div class="sub-1-3 column_3">                </div>            </div>            <div class="row">                <div class="form_footer">                    <%= link_to "cancel", projects_path %>                </div>                <% end %>            </div>        </div>    </div></div>
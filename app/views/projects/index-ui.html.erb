<!-- project information bar -->
<div class="row info_band">
	<div class="info_left">
		<div class=""><h3>Welcome <%=h current_user.name %></h3></div>
	</div>
</div>


<!-- revision option bar -->
<div class="row option_band">
	 <div class="option_right">
		<div><%= link_to "+ project", new_project_path %>roject.parent_id) %></div>
	</div>
	
	<div class="option_left">
		<div>
			<label class="select_1">Project:</label>
			<%= select_tag "project", options_from_collection_for_select(@projects, :id, :code_and_title), {:prompt => "Select project to view/edit", :class => 'project_selectBox', :onchange => "window.location='/projects/'+this.value+'/edit';"} %>		</div>
	</div>
</div>


<% if @project_user %>
    <%= existing_user_intro(@project_user) %>
<% else %>
    <%= new_user_intro %>
<% end %>    


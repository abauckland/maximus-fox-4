<div class="row title_band">    <div class="page_title">        <h1>Edit Project</h1>    </div></div><div class="row">    <div class="col-1-1">        <div class="border">            <%= render :partial => "form_error", :locals => {:item => @project} %>            <%= form_for(@project, :html => { :multipart => true }) do |f| %>                <div class="row">                <div class="sub-1-3 column_1">                    <fieldset>                        <div class="row">                            <div class="column_title">                                <h4>Project Details<span class="form_tooltip"></span></h4>                            </div>                        </div>                        <!-- form input[text] -->                         <div class="form_tooltip" id="project_code"></div>                        <label class="label_120">Project Code:*</label>                        <span>                            <%= f.text_field :code %>                        </span></br>                        <!-- form input[text] -->                         <div class="form_tooltip" id="project_title"></div>                        <label class="label_120">Project Title:*</label>                        <span>                            <%= f.text_field :title %>                        </span></br>                        <!-- form input[file] -->                         <div class="form_tooltip" id="project_image"></div>                        <label class="label_120">Project Image:</label>                        <% if @project.project_image? %>                            <span>                                <%= image_tag(@project.project_image, {:height => "25px"}) %>                            </span></br>                            <!-- form input[text] -->                             <label class="label_100"></label>                            <span>                                <%= f.file_field :project_image %>                            </span></br>                        <% else %>                            <span>                                <%= f.file_field :project_image %>                            </span></br>                        <% end %>                        <!-- form input[text] -->                         <div class="form_tooltip" id="project_client"></div>                        <label class="label_120">Project Client:</label>                        <span>                            <%= f.text_field :client_name %>                        </span></br>                        <!-- form input[file] -->                         <div class="form_tooltip" id="project_client_logo"></div>                        <label class="label_120">Client Logo:</label>                        <% if @project.project_image? %>                            <span>                                <%= image_tag(@project.client_image, {:height => "25px"}) %>                            </span></br>                            <!-- form input[text] -->                             <label class="label_100"></label>                            <span>                                <%= f.file_field :client_image %>                            </span></br>                        <% else %>                            <span>                                <%= f.file_field :client_image %>                            </span></br>                        <% end %>                    </fieldset>                </div>                                <div class="sub-1-3 column_2">                    <fieldset>                        <div class="row">                            <div class="column_title">                                <h4>Project Settings<span class="form_tooltip"></span></h4>                            </div>                        </div>                        <!-- form input[select] -->                        <div class="form_tooltip" id="project_status"></div>                        <label class="label_120">Project Status:</label>                        <span>                            <%= f.select :project_status, options_for_select(@available_status_array, @project.project_status) %>                        </span></br>                        <div class="form_tooltip" id="project_ref_system"></div>                        <label class="label_110">Reference System:</label>                        <span><%= @project.ref_system %></span></br>                        <!-- form input[select] -->                        <div class="form_tooltip" id="project_template"></div>                        <label class="label_120">Project Template:</label>                        <span>                            <%= f.select :parent_id, options_for_select(@templates.collect {|p| [ p.code_and_title, p.id ]}, @project.parent_id) %>                        </span></br>                    </fieldset>                                                        </div>                                <div class="sub-1-3 column_3">                	                </div>            </div>                        <div class="row">                <div class="form_footer">                    <%= f.submit "save" %>                    <%= link_to "cancel", projects_path %>                </div>                <% end %>            </div>                    </div>    </div></div>
<div class="project_info">	<div class="project_title">		Select project to edit/publish:	</div></div><div class="option_band_single">		<div class="project_select">		<div class="project_label_select">Project:</div>		<div class="small_hide project_option_select">      		<%= select_tag "project", options_from_collection_for_select(@projects, :id, :code_and_title, @project.id), {:class => 'project_selectBox', :onchange => "window.location='/projects/'+this.value;"} %> 				</div>		<div class="small_show project_option_select">      		<%= select_tag "project", options_from_collection_for_select(@projects, :id, :code, @project.id), {:class => 'project_selectBox', :onchange => "window.location='/projects/'+this.value;"} %> 				</div>	</div>	<div class="small_hide project_create_button"><%= link_to "create new project", new_project_path %> </div>	<div class="small_show project_create_button"><%= link_to "+ project", new_project_path %> </div>   </div><div class="content">    <div class="column_1">		<div class="column_content">      		<div class="column_title">Project details</div>               		<% if @project.errors.any? %>       		<div class="column_error">        		<p><%= pluralize(@project.errors.count, "error") %> prohibited this project from being edited </p>      		</div>	  		<% end %>     		<div class="column_sub_content">				<div class="column_guide"> 					<p>The uploaded project image will be scaled proportionally to maximum 90mm high x 120mm wide</p> 					<p>Image files must be either png or jpeg format and files must be no bigger than 1Mb in size.</p>     			      			</div>				<div class="column_form">				<%= form_for @project, :url => change_project_path(), :html => { :multipart => true } do |f| %>						<table>						<tr><td>							<div class="project_form_label form_input_label">Project Code:*</div>							<div class="form_input"><%= f.text_field :code %>								<div class="form_error_note"><%= error_check(@project, :code)%> </div>							</div>												</td></tr>						<tr><td>							<div class="project_form_label form_input_label">Project Title:*</div>							<div class="form_input"><%= f.text_field :title %>								<div class="form_error_note"> <%= error_check(@project, :title)%> </div>							</div>										</td></tr>																	<tr><td>							<div class="project_form_label form_input_label">Project Image:</div>							<% if @project.photo? %>							 <div class="form_input"><%= image_tag @project.photo(:thumb) %></div>							<% else %>							 <div class="form_input">No image has been uploaded</div>							<% end %>											</td></tr>						<tr><td>							<div class="project_form_label form_input_label">Change Project Image:<br><span class="form_label_note"> (1Mb max)</span></div>							<div class="form_input"><%= f.file_field :photo %></div>									</td></tr>                        <%= f.fields_for :clients do |builder| %>                        <tr><td>                            <div class="project_form_label form_input_label">Project Client:</div>                            <div class="form_input"><%= builder.text_field :name %></div>                                     </td></tr>                        <tr><td>                            <div class="project_form_label form_input_label">Client Logo:</div>                            <% if @client.photo? %>                             <div class="form_input"><%= image_tag @client.photo(:thumb) %></div>                            <% else %>                             <div class="form_input">No logo has been uploaded</div>                            <% end %>                                    </td></tr>                        <tr><td>                            <div class="project_form_label form_input_label">Change Client Logo:<br><span class="form_label_note"> (1Mb max)</span></div>                            <div class="form_input"><%= builder.file_field :photo %></div>                                     </td></tr>                        <% end %>						</table>	      	      			</div>    		</div>    	      		<div class="column_footer">        		<div>        			<div class="column_submit"><%= f.submit "update"%></div>                      		<% end %>       		                     		</div>         		</div>      	</div>   	</div>		<div class="column_2">		<div class="column_content">      		<div class="column_title">Project settings</div>             		<div class="column_sub_content">				<div class="column_guide">					<p>It is recommended that the Project status is kept as 'Draft' until the document has been fully scoped. Once the project status has been changed from 'Draft' it cannot be changed back.</p>   			      			</div>				<div class="column_form">				<%= form_for @project, :url => change_project_path(), :html => { :multipart => true } do |f| %>						<table>						<tr><td>							<div class="project_form_label form_input_label">Project Status:</div>							<div class="form_input"><%= f.select :project_status, options_for_select(@available_status_array, @project.project_status) %></div>										</td></tr>						<tr><td>							<div class="project_form_label form_input_label">Reference System:</div>							<div class="form_default"><%= @project.ref_system %></div>										</td></tr>						<tr><td>							<div class="project_form_label form_input_label">Project Template:</div>							<div class="form_input"><%= f.select :parent_id, options_for_select(@templates.collect {|p| [ p.code_and_title, p.id ]}, @project.parent_id) %></div>									</td></tr>						</table>	      	      			</div>    		</div>      		<div class="column_footer">        		<div>        			<div class="column_submit"><%= f.submit "update", :confirm => "If you have changed the project status please note: once the status has been changed from 'Draft' it cannot be changed back Do you wish to continue?"%></div>                      		<% end %>       		                     		</div>         		</div>      	</div>   	</div>				<% if authorise_project_view(@project.id, ["manage"])%>    <div class="column_3">        <div class="column_content">            <div class="column_title">Document Control</div>               <div class="column_sub_content">                <div class="column_guide">                    Change print settings and document structure:                </div>                      <div class="column_link_list">                  <div class="column_link help_link">                    <%= link_to "Print Settings", {:controller => "printsettings", :action => "edit", :id => @project.id} %>                  </div>                </div>                <div class="column_guide">                    Set and manage user editing rights:                </div>                <div class="column_link_list">                    <div class="column_link help_link">                    <%= link_to "Editing Settings", {:controller => "projectusers", :action => "index", :id => @project.id} %>                  </div>                </div>            </div>                             <div class="column_footer">             </div>        </div>       </div>    <%else%>        <div class="column_3 column_blank"></div>        <%end%>      	</div> 
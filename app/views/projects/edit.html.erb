<div class="row title_band">    <div class="page_title">        <h1>Edit Project</h1>    </div></div><div class="row">    <div class="col-1-1">        <div class="border">            <%= render :partial => "form_error", :locals => {:item => @project} %>        <%= render :partial => "flash_notice" %>            <%= form_for(@project, :html => { :multipart => true }) do |f| %>            <div class="row">                <div class="sub-1-3 column_1">                    <fieldset>                        <div class="row">                            <div class="column_title">                                <h4>Project Details</h4>                            </div>                        </div>                        <!-- form input[text] -->                        <div class="form_tooltip" id="project_code"></div>                        <label class="label_90">Project Code:*</label>                        <span>                            <%= f.text_field :code %>                        </span></br>                        <!-- form input[text] -->                        <div class="form_tooltip" id="project_title"></div>                        <label class="label_90">Project Title:*</label>                        <span>                            <%= f.text_field :title %>                        </span></br>                        <!-- form input[file] -->                        <div class="form_tooltip" id="project_image"></div>                        <label class="label_90">Project Image:</label>                        <% if @project.project_image? %>                            <span>                                <%= image_tag(@project.project_image, {:height => "25px"}) %>                            </span></br>                            <!-- form input[text] -->                            <label class="label_90"></label>                            <span>                                <%= f.file_field :project_image %>                            </span></br>                        <% else %>                            <span>                                <%= f.file_field :project_image %>                            </span></br>                        <% end %>                        <!-- form input[text] -->                        <div class="form_tooltip" id="project_client"></div>                        <label class="label_90">Project Client:</label>                        <span>                            <%= f.text_field :client_name %>                        </span></br>                        <!-- form input[file] -->                        <div class="form_tooltip" id="project_client_logo"></div>                        <label class="label_90">Client Logo:</label>                        <% if @project.client_logo? %>                            <span>                                <%= image_tag(@project.client_logo, {:height => "25px"}) %>                            </span></br>                            <!-- form input[text] -->                            <label class="label_90"></label>                            <span>                                <%= f.file_field :client_logo %>                            </span></br>                        <% else %>                            <span>                                <%= f.file_field :client_logo %>                            </span></br>                        <% end %>                    </fieldset>                </div>                <div class="sub-1-3 column_2">                    <fieldset>                        <div class="row">                            <div class="column_title">                                <h4>Project Settings</h4>                            </div>                        </div>                        <!-- form input[select] -->                        <div class="form_tooltip" id="project_status"></div>                        <label class="label_100">Project Status:</label>                        <span>                            <%= f.select :project_status, options_for_select(@available_status_array, @project.project_status), confirm: "Plese note that once the project's status has been advanced it cannot be changed back to a previous state" %>                        </span></br>                        <!-- form input[select] -->                        <div class="form_tooltip" id="project_template"></div>                        <label class="label_100">Project Template:</label>                        <span>                            <%= f.select :parent_id, options_for_select(@templates.collect {|p| [ p.code_and_title, p.id ]}, @project.parent_id) %>                        </span></br>                    </fieldset>                </div>                <div class="sub-1-3 column_3">                </div>            </div>            <div class="row">                <div class="form_footer">                    <%= f.submit "save" %>                    <%= link_to "cancel", projects_path %>                </div>                <% end %>            </div>        </div>    </div></div>
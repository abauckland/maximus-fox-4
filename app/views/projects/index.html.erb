<div class="row title_band">
    <div class="page_title">
        <h1>Select Project</h1>
    </div>
</div>


<div class="row option_band">
    <div>
        <div>
            <label class="select_1">Project:</label>
            <%= select_tag "project", options_from_collection_for_select(@projects, :id, :code_and_title), {:prompt => "Select project to view/edit", :onchange => "window.location='/projects/'+this.value+'/edit';"} %>
        </div>
    </div>

    <div class="float_right">
        <div><%= link_to "+ project", new_project_path, class: "option_button" %></div>
    </div>
</div>


<% if @project_user %>
    <%= existing_user_intro(@project_user) %>
<% else %>
    <%= new_user_intro %>
<% end %>
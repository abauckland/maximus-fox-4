<div class="project_info">
	<div class="project_title">
		<div class="project_code">   
		    Welcome <span class="user_welcome_name"><%= current_user.name %></span>. 
		</div>
	</div>	
</div>

<div class="option_band_single">	
	<% if @projects %>
	   <div class="project_select">
		  <div class="project_label_select">Project:</div>
		  <div class="small_hide project_option_select">
      	     <%= select_tag "project", options_from_collection_for_select(@projects, :id, :code_and_title, @project.id), { :class => 'project_selectBox', :onchange => "window.location='/projects/'+this.value+'/edit';"} %> 		
		  </div>
		  <div class="small_show project_option_select">
      		 <%= select_tag "project", options_from_collection_for_select(@projects, :id, :code, @project.id), {:class => 'project_selectBox', :onchange => "window.location='/projects/'+this.value+'/edit';"} %> 		
		  </div>
	   </div>
	<% end %>

    <% if authorise_project_view(@project.id, ["manage", "edit"]) %>
	   <div class="small_hide project_create_button"><%= link_to "create new project", new_project_path %> </div>
	   <div class="small_show project_create_button"><%= link_to "+ project", new_project_path %> </div>   
    <% end %>
</div>


<div class="content">
    
    <% if @project_user %>    
        <%= index_help_text(@project_user)%>
    <% else %>

    <% end %>    

</div> 



<!-- project information bar --><div class="row info_band">	<div class="info_right">		<div><h3>Status: <%= @project.project_status %></h3></div>		<div><h3>Rev: <%= current_revision_render(@project) %></div>	</div>	<div class="info_left">		<div class=""><h3><%= @project.code_and_title %></h3></div>	</div></div><!-- revision option bar --><div class="row option_band">	<div>		<div>			<label class="select_1">Revision:</label>			<%= print_revision_select_list(@project, @revisions, @revision)%>		</div>	</div></div><div class="row">    <div class="col-1-3 column_1">        <div class="border"><!-- form column start-->            <div class="row">				<form action="<%= print_project_print_path %>" method="get" >						<%= hidden_field_tag "id", @project.id %>						<%= hidden_field_tag "revision", @revision.id %>                    <fieldset>                        <div class="row">                            <div class="column_title">                                <h4>Download Options<span class="form_tooltip" id="print_project"></span></h4>                            </div>                        </div>                        <!-- form input[radio] -->                        <div class="form_tooltip" id="print_draft"></div>                        <label class="label_100">Download Type:</label>                        <span>                            <%= radio_button_tag "issue", "draft", checked = true %>                            <span>Draft (with watermark)</span>                        </span></br>                    <% if policy(:print).final? %>                        <% unless @project.Draft? %>                            <div class="form_tooltip" id="print_final"></div>                            <label class="label_100"></label>                            <span>                                <%= radio_button_tag "issue", "final" %>                                <span>Final (change doc. rev.)</span>                            </span></br>                        <% end %>                    <% end %>                    </fieldset>            </div><!-- column footer start-->             <div class="row">                <div class="form_footer">                    <%= submit_tag 'download pdf'%>                </div>                </form>            </div>        </div>    </div>    <div class="col-1-3 column_2">        <div class="border blank_column"></div>    </div>    <div class="col-1-3 column_3">        <div class="border blank_column"></div>    </div></div>
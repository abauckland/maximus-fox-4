<!-- project information bar --><div class="row info_band">	<div class="info_right">		<div><h3>Status: <%=h @project.project_status %></h3></div>		<div><h3>Rev: <%=h current_revision_render(@project) %></div>	</div>	<div class="info_left">		<div class=""><h3>Project: <%=h @project.code_and_title %></h3></div>	</div></div><!-- revision option bar --><div class="row option_band">	<div class="option_left">		<div>			<label class="select_1">Revision:</label>			<%= print_revision_select_list(@project, @revisions, @revision)%>		</div>	</div></div><div class="row">    <div class="col-1-3 column_1">        <div class="border"><!-- form column start-->            <div class="row">				<form action="<%= print_project_print_path %>" method="get" >						<%= hidden_field_tag "id", @project.id %>						<%= hidden_field_tag "revision", @revision.id %>                    <fieldset>                        <div class="row">                            <div class="column_title">                                <h3>Download PDF of Specification<span class="form_tooltip" id="print_project"></span></h3>                            </div>                        </div>						<div class="row">							<div class="column_text">								<%= print_help(@print_status_show)%>							</div>						</div>                        <div class="row">                            <div class="column_line"></div>                        </div>						<div class="row">							<div class="column_text">								<%= watermark_checkbox(@print_status_show) %>							</div>						</div>                    </fieldset>            </div><!-- column footer start-->             <div class="row">                <div class="form_footer">                    <%= submit_tag 'download pdf'%>                </div>                <% end %>            </div>        </div>    </div>    <div class="col-1-3 column_2">        <div class="border blank_column"></div>    </div>    <div class="col-1-3 column_3">        <div class="border blank_column"></div>    </div></div>
<div class="web_page_body">
	
	<div class="web_title_band">
	<div class="web_title">Features</div>
	</div>
	<div class="web_title_signup_link"><%= link_to "create free account", sign_up_path %></div>


	
    <div class="lrg_menu_tile">     
        <div class="lrg_menu_tile_container">
            <% @features.each_with_index do |content, i|%>
            <div id ="lrg_menu_tile_<%= i %>" class="lrg_menu_tile_item">
            <div class="sub_container">
                <a href="<%=feature_path(content) %>">
                    <%= image_tag "#{content.title}.png", :border=>0, :height=> '88', :width => '220', :class=>"lrg_menu_tile_image" %>
                    <p class="lrg_menu_tile_title"><%= content.title %></p>
                    <p class="lrg_menu_tile_text"><%= content.text %></p>     
                </a>
            </div>
            </div>
            <% end %>       
        </div>
            
    </div>
	
	
	<%= render :partial => "websites/web_footer" %>
	
</div>
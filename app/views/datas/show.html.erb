<div class="row title_band">    <div class="page_title">        <h1>Download Product Data</h1>    </div></div><!-- project information bar --><div class="row info_band">    <div class="info_right">        <div><h3>Status: <%= @project.project_status %></h3></div>        <div><h3>Rev: <%= current_revision_render(@project) %></div>    </div>    <div class="info_left">        <div class=""><h3><%= @project.code_and_title %></h3></div>    </div></div><div class="row">    <div class="col-1-3 column_1">        <div class="border"><!-- form column start-->            <div class="row">				<form action="<%= download_data_path %>" method="get" >						<%= hidden_field_tag "id", @project.id %>						<%= hidden_field_tag "revision_id", @revision.id %>                    <fieldset>                        <div class="row">                            <div class="column_title">                                <h4>Download Options<span class="form_tooltip" id="data_download"></span></h4>                            </div>                        </div>                        <!-- form input[radio] -->                        <label class="label_80">File Format:</label>                        <span>                            <%= radio_button_tag "product_data", "products_accessories", checked = true %>                            <span>Products & Accessories (csv)</span>                        </span></br>                    </fieldset>            </div><!-- column footer start-->             <div class="row">                <div class="form_footer">                    <%= submit_tag 'download csv'%>                </div>                </form>            </div>        </div>    </div>    <div class="col-1-3 column_2">        <div class="border blank_column"></div>    </div>    <div class="col-1-3 column_3">        <div class="border blank_column"></div>    </div></div>